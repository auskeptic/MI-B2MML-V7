<?xml version="1.0" encoding="utf-8"?>

<xsd:schema
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  targetNamespace="http://www.mesa.org/xml/B2MML-BHPBilliton"
  xmlns="http://www.mesa.org/xml/B2MML-BHPBilliton"
  xmlns:Extended="http://www.mesa.org/xml/B2MML-BHPBilliton-AllExtensions"

  elementFormDefault="qualified"
  attributeFormDefault="unqualified">

  <xsd:include schemaLocation="B2MML-BHPBilliton-Common.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-ConfirmBOD.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-Equipment.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-Material.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-OperationsCapability.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-OperationsDefinition.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-OperationsPerformance.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-OperationsSchedule.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-Personnel.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-PhysicalAsset.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-ProcessSegment.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-ProductDefinition.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-ProductionCapability.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-ProductionPerformance.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-ProductionSchedule.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-ResourceRelationshipNetwork.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-TransactionProfile.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-WorkAlert.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-WorkCapability.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-WorkDefinition.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-WorkPerformance.xsd" />
  <xsd:include schemaLocation="B2MML-BHPBilliton-WorkSchedule.xsd" />
  

  <xsd:import namespace="http://www.mesa.org/xml/B2MML-BHPBilliton-AllExtensions"
              schemaLocation="B2MML-BHPBilliton-AllExtensions.xsd" />
  <xsd:annotation>
